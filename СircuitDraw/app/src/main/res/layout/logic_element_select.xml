<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/menu_button_not"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_not" />

    <Button
        android:id="@+id/menu_button_and"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_and"  />

    <Button
        android:id="@+id/menu_button_or"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_or"  />

    <Button
        android:id="@+id/menu_button_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_cancel"  />

</LinearLayout>